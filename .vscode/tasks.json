{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "lime",
			"command": "test",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "debug: flash",
			"command": "haxelib",
			"args": ["run", "lime", "build", "flash", "-debug", "-Dfdb"],
			"problemMatcher": ["$haxe-absolute", "$haxe", "$haxe-error", "$haxe-trace"]
		},
		{
			"label": "debug: html5",
			"command": "haxelib",
			"args": ["run", "lime", "test", "html5", "-debug", "-Dfdb"],
			"problemMatcher": ["$haxe-absolute", "$haxe", "$haxe-error", "$haxe-trace"]
		},
	]
}
